{% extends "layouts/" + previewLayout | default('layout') + ".njk" %}

{% set templateTitle = ("Default " + componentName if exampleName == "default" else componentName + " " + exampleName) | unslugify %}

{% block pageTitle %}{{ templateTitle }} - GOV.UK Frontend{% endblock %}

{# Remove standard template banners/headers/frontmatter #}
{% block skipLink %}{% endblock %}
{% block bodyStart %} {% endblock %}
{% block header %}{% endblock %}

{% block content %}
  <div class="app-whitespace-highlight">
    {{ componentView | safe }}
  </div>
{% endblock %}

{% block scripts %}
  {#
    Uncomment to load the accessible-autocomplete as the `accessibleAutocomplete` global.

    If doing so, make sure you comment the bundled ways to load accessibleAutocomplete in `javascripts/component-preview-iframe.mjs`
  #}

    <script type="module" src="/accessible-autocomplete/dist/accessible-autocomplete.min.js"></script>
    <script type="module">
      const selectElement = document.querySelector('.govuk-select');

      if (selectElement) {
        accessibleAutocomplete.enhanceSelectElement({selectElement})
      }
    </script>

  <script type="module" src="/javascripts/component-preview-iframe.bundle.min.mjs"></script>
{% endblock %}
