{% from "back-link/macro.njk" import govukBackLink %}
{% from "breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "details/macro.njk" import govukDetails %}
{% from "header/macro.njk" import govukHeader %}
{% from "error-summary/macro.njk" import govukErrorSummary %}
{% from "tabs/macro.njk" import govukTabs %}
{% from "table/macro.njk" import govukTable %}

{% extends "layout.njk" %}

{% block styles %}
  <style>

    .link-no-underline {
      text-decoration: none;
    }
    
    .slides {
      background-color: #1d70b8;
      color: #ffffff;
      box-sizing: border-box;
      padding: 15px;
    }

    .slides .govuk-body,
    .slides .govuk-link,
    .slides .govuk-heading-l,
    .slides .govuk-heading-m {
      color: #ffffff;
    }

    .slides .govuk-link:hover:not(:focus) {
      color: #fff;
      box-shadow: 0 -2px transparent, 0 3px #ffffff;
    }

    .slides .govuk-button {
      background-color: #ffffff;
      color: #1d70b8;
      box-shadow: 0 2px 0 #134876;
      font-weight: bold;
    }

    .slides.govuk-button:focus:not(:active):not(:hover) {
      border-color: #ffdd00;
      color: #0b0c0c;
      background-color: #ffdd00;
      box-shadow: 0 2px 0 #0b0c0c;
    }

    .slides .govuk-details__summary {
      color: #ffffff;
    }

    .slides .govuk-details__summary:hover:not(:focus) {
      color: #fff;
      background-color: transparent;
      box-shadow: 0 -2px transparent, 0 3px #ffffff;
      text-decoration: none;
    }

    .slides .govuk-details__text {
      color: #ffffff;
      border-left: 5px solid #ffffff;
    }

    .light-grey-panel {
      background-color: #f3f2f1;
      padding: 15px;
    }
    
  </style>
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    "href": "/"
  }) }}
{% endblock %}

