{% set idPrefix = params.idPrefix if params.idPrefix else "task-list" %}
<ul class="govuk-task-list">
  {% for item in params.items %}
    {% if item.hint %}
      {%- set hintId = idPrefix + "-" + loop.index + "-hint" -%}
    {% endif %}
    {%- set statusId = idPrefix + "-" + loop.index + "-status" -%}
    <li class="govuk-task-list__item">
      {% if item.href %}
        <a class="govuk-task-list__task-link" href="{{ item.href }}" aria-describedby="{{ hintId + " " if item.hint }}{{ statusId }}">
      {% else %}
        <div class="govuk-task-list__task-no-link">
      {% endif %}
          <span class="govuk-task-list__task-name-and-hint">
            <span class="govuk-task-list__task-link__task_name">{{ item.title.html | safe if item.title.html else item.title.text }}</span>
            {% if item.hint %}
              <span id="{{ hintId }}" class="govuk-task-list__task-link__task_hint">
                {{ item.hint.html | safe if item.hint.html else item.hint.text }}
              </span>
            {% endif %}
          </span>
          <span class="govuk-task-list__status-container">
            <span id="{{ statusId }}" class="govuk-task-list__status {{ item.status.classes }}">
              {{ item.status.text }}
            </span>
          </span>
      {% if item.href %}
        </a>
      {% else %}
        </div>
      {% endif %}
    </li>
  {% endfor %}
</ul>
